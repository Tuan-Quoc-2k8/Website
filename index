    <!-- In-App Browser Detection -->
    <script>
    (function() {
        'use strict';
        
        function detectInAppBrowser() {
            const ua = navigator.userAgent || navigator.vendor || window.opera;
            if (window.innerWidth > 768) return false;
            
            if (ua.indexOf('Zalo') > -1) return { name: 'zalo', displayName: 'Zalo' };
            if (ua.indexOf('FBAN') > -1 || ua.indexOf('FBAV') > -1) return { name: 'facebook', displayName: 'Facebook' };
            if (ua.indexOf('Instagram') > -1) return { name: 'instagram', displayName: 'Instagram' };
            if (ua.indexOf('Line') > -1) return { name: 'line', displayName: 'Line' };
            if (ua.indexOf('MicroMessenger') > -1) return { name: 'wechat', displayName: 'WeChat' };
            
            return false;
        }
        
        const inAppInfo = detectInAppBrowser();
        
        if (inAppInfo) {
            const banner = document.getElementById('inapp-browser-banner');
            banner.style.display = 'block';
            document.body.style.paddingTop = banner.offsetHeight + 'px';
            
            setTimeout(function() {
                if (window.closeInAppBanner) window.closeInAppBanner();
            }, 10000);
        }
        
        window.closeInAppBanner = function() {
            const banner = document.getElementById('inapp-browser-banner');
            if (banner) {
                banner.style.animation = 'slideDown 0.3s ease reverse';
                setTimeout(function() {
                    banner.style.display = 'none';
                    document.body.style.paddingTop = '0';
                }, 300);
            }
        };
    })();
    </script>
